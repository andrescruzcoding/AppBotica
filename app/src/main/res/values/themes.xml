<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalBotica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color de la barra superior -->
        <item name="colorPrimary">#1A8DCB</item>
        <item name="colorPrimaryVariant">#1A8DCB</item>
        <!-- Texto en blanco en la barra -->
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Color secundario (opcional) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">#1A8DCB</item>
    </style>
</resources>